rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 사이트 설정 - 누구나 읽기 가능, 인증된 사용자만 쓰기
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 작품 - 발행된 작품은 누구나 읽기 가능
    match /works/{workId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 문장형 카테고리 - 누구나 읽기 가능
    match /sentenceCategories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 전시명 카테고리 - 누구나 읽기 가능
    match /exhibitionCategories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
